<%= turbo_frame_tag 'new_comment' do %>
  <h2>New Comment</h2>
  <%= form_with model: [@ticket, @comment],
                data: { controller: 'reset', action: 'turbo:submit-end->reset#reset' } do |form| %>
    <div class='field'>
      <%= form.rich_text_area :content %>
      <%= form.submit 'Post', 'data-reset-target': 'button' %>
    </div>
  <% end %>
<% end %>
